<% if !@article.draft? %>
  <div class="blog-post">
    <h1><%= @article.title %></h1>
    <div><%= simple_format(@article.body) %></div>
  </div>
  <% if current_user.id == @article.user_id %>
    <ul>
      <li><%= link_to 'Edit', edit_article_path(@article) %></li>
    </ul>
  <% end %>
<% else %>
  <% if current_user.id == @article.user_id %>
    <div class="blog-post">
      <%= @article.title %>
      <div><%= simple_format(@article.body) %></div>
    </div>
    <%= link_to 'Edit', edit_article_path(@article) %>
  <% else %>
    Извините, у вас нет доступа к данному контенту!
  <% end %>
<% end %>
<a href="/articles/">To your articles</a>
<h2>Comments</h2>
<%= render @article.comments %>
<% if @article.comments.count == 0 %>
  <p>There is no any comment</p>
<% end %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
