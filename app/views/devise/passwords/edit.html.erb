<div class="margin-form">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class='field'>
    <%= f.label :password, 'New password' %><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'w-50 form-control form-control-lg', placeholder: 'New password' %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation, 'Confirm new password' %><br>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'w-50 form-control form-control-lg', placeholder: 'Confirm password' %>
  </div>
  <br>
  <div class='actions'>
    <button class="w-50 btn btn-lg btn-primary" type="submit">Change my password</button>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
<p class="mt-5 mb-3 text-muted">&copy; Severyanova 2022</p>
</div>
