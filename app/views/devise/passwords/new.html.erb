<div class="margin-form">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='field'>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'w-50 form-control form-control-lg', placeholder: 'Email' %>
  </div>
    <br>
  <div class='actions'>
    <button class="w-50 btn btn-lg btn-primary" type="submit">Send me reset password instructions</button>
    <%# f.submit 'Send me reset password instructions' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
<p class="mt-5 mb-3 text-muted">&copy; Severyanova 2022</p>
</div>
